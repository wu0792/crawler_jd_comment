{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc -w",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-w",
                "--outDir",
                "./dist",
                "-p",
                "./tsconfig.json",
                "--sourceMap"
            ],
            "problemMatcher": [
                "$tslint5"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}